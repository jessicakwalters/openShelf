<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles/reset.css" type="text/css">
  <link rel="stylesheet" href="/styles/base.css" type="text/css">
  <link rel="stylesheet" href="/styles/layout.css" type="text/css">
  <link rel="stylesheet" href="/styles/modules.css" type="text/css">
  <title>Book Results</title>
</head>
<body>
  <h2> Search Results </h2>
  <div class="bookResult flex-container">
    <% searchResults.forEach( ( book,  idx )=> { %>
      <%- include('../books/detail', { book: book } ) %>
      <button class="editDeets" type="submit" value="<%= idx %>">Edit Details</button>
      <form class="flex-item flex-container hide" id="<%= idx %>">
        <label for="title">Title
          <input type="text" name="title" value="<%= book.title %>"/>
        </label>
        <label for="author">Author
          <input type="text" name="author" value="<%= book.author %>"/>
        </label>
        <label for="isbn">ISBN
          <input type="text" name="isbn" value="<%= book.isbn %>"/>
        </label>
        <textarea name="description" rows="20" cols="30" value=""><%= book.description %></textarea>
        <input type="text" name="bookshelf" placeholder="Bookshelf Name"/>
        <button class="show" type="submit">Save Book</button>
      </form>
    <% }) %>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="./js/app.js"></script>
</body>
</html>